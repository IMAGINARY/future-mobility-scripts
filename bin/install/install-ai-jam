#!/bin/bash

if [ "$UID" -ne 0 ]
then
    >&2 echo "This script requires superuser privileges."
    exit 1
fi

set -e

# Install dependencies for certain python packages
apt install -yq \
    alsa-utils \
    build-essential \
    libasound2-dev \
    libasound2-dev \
    libjack-jackd2-0 \
    libjack-jackd2-dev \
    pkg-config \
    python2-dev \
    virtualenv \
    '' # dummy entry to terminate the list

# Install AI Jam sources
COMMITISH="v1.1.1"
REPO_URL="https://github.com/IMAGINARY/ai-jam.git"
INSTALL_DIR="/opt/ai-jam"

"${BASH_SOURCE%/*}/../internal/install-source-from-git" "$COMMITISH" "$REPO_URL" "$INSTALL_DIR"

# Setup a virtual environment inside $INSTALL_DIR
# FIXME: On Ubuntu 20.04, the ipaddress package is missing and needs to be installed manually :-(
cd "$INSTALL_DIR"
IPADDRESS_WHEEL_URL="https://files.pythonhosted.org/packages/c2/f8/49697181b1651d8347d24c095ce46c7346c37335ddc7d255833e7cde674d/ipaddress-1.0.23-py2.py3-none-any.whl"
WHEEL_DIR="/usr/share/python-wheels"
( cd "$WHEEL_DIR" && curl -O "$IPADDRESS_WHEEL_URL" )
virtualenv --python=$(which python2.7) --no-setuptools env

# Install python packages in virtual environment
. ./env/bin/activate
./env/bin/pip install setuptools==44

# TODO: When AI Jam has been made compatible with Python 3,
# only pin version of essential packages, not dependencies
# ./env/bin/pip install tensorflow==1.12.0 magenta==0.1.15
./env/bin/pip install \
    absl-py==0.9.0 \
    appdirs==1.4.3 \
    astor==0.8.1 \
    backports-abc==0.5 \
    backports.functools-lru-cache==1.6.1 \
    backports.shutil-get-terminal-size==1.0.0 \
    backports.weakref==1.0.post1 \
    bokeh==1.4.0 \
    CacheControl==0.12.6 \
    certifi==2019.11.28 \
    chardet==3.0.4 \
    colorama==0.4.3 \
    contextlib2==0.6.0 \
    cycler==0.10.0 \
    decorator==4.4.2 \
    distlib==0.3.0 \
    distro==1.4.0 \
    enum34==1.1.10 \
    funcsigs==1.0.2 \
    futures==3.3.0 \
    gast==0.3.3 \
    grpcio==1.28.1 \
    h5py==2.10.0 \
    html5lib==1.0.1 \
    idna==2.8 \
    intervaltree==3.0.2 \
    ipaddress==1.0.23 \
    ipython==5.9.0 \
    ipython-genutils==0.2.0 \
    Jinja2==2.11.1 \
    Keras-Applications==1.0.8 \
    Keras-Preprocessing==1.1.0 \
    kiwisolver==1.1.0 \
    lockfile==0.12.2 \
    magenta==0.1.15 \
    Markdown==3.1.1 \
    MarkupSafe==1.1.1 \
    matplotlib==2.2.5 \
    mido==1.2.6 \
    mock==3.0.5 \
    msgpack==0.6.2 \
    numpy==1.16.6 \
    packaging==20.3 \
    pandas==0.24.2 \
    pathlib2==2.3.5 \
    pep517==0.8.2 \
    pexpect==4.8.0 \
    pickleshare==0.7.5 \
    Pillow==6.2.2 \
    pkg-resources==0.0.0 \
    pretty-midi==0.2.8 \
    progress==1.5 \
    prompt-toolkit==1.0.18 \
    protobuf==3.11.3 \
    ptyprocess==0.6.0 \
    Pygments==2.5.2 \
    pyparsing==2.4.6 \
    python-dateutil==2.8.1 \
    python-rtmidi==1.4.0 \
    pytoml==0.1.21 \
    pytz==2019.3 \
    PyYAML==5.3.1 \
    requests==2.22.0 \
    retrying==1.3.3 \
    scandir==1.10.0 \
    scipy==1.2.3 \
    simplegeneric==0.8.1 \
    singledispatch==3.4.0.3 \
    six==1.14.0 \
    sortedcontainers==2.1.0 \
    subprocess32==3.5.4 \
    tensorboard==1.12.2 \
    tensorflow==1.12.0 \
    termcolor==1.1.0 \
    tornado==5.1.1 \
    traitlets==4.3.3 \
    urllib3==1.25.8 \
    wcwidth==0.1.9 \
    webencodings==0.5.1 \
    Werkzeug==1.0.1 \
    pip # already installed dummy package to terminate the list

# Download the magenta models if necessary
./INSTALL.sh

# Modify the default config
sed "s/\(^[[:space:]]*skipStartScreen:[[:space:]]*\)false/\1true/" \
    ./public/cfg/sample.config.yml \
    > ./public/cfg/config.yml
