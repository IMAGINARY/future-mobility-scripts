#!/bin/bash
# This wrapper script is supposed to be visible in ps -a resp. ps -u `id -u` to make
# it easy to kill it (by a script or manually)

PIDS=""
function finish {
    EXIT_CODE=$?
    kill $PIDS >/dev/null 2>&1
    exit $EXIT_CODE
}
trap finish SIGINT SIGTERM EXIT

OPTS=()
if [ ! -z "${FUTURE_MOBILITY_APP_DASHBOARD_DISPLAY}" ]
then
  OPTS=(--cover-displays "${FUTURE_MOBILITY_APP_DASHBOARD_DISPLAY}")
fi

APP_DIR_DEFAULT="/opt/future-mobility/future-mobility"
APP_DIR="${FUTURE_MOBILITY_APP_DIR:-$APP_DIR_DEFAULT}"

if [[ -z "${FUTURE_MOBILITY_APP_DIR}" ]]; then
  echo "FUTURE_MOBILITY_APP_DIR environment variable not set. Using default value: ${APP_DIR}"
else
  echo "Using FUTURE_MOBILITY_APP_DIR environment variable. Value: ${APP_DIR}"
fi

# Launch the exhibit in the background
kiosk-browser $KIOSK_OPTS \
    --app-name-suffix=future-mobility-app-dashboard \
    --remote-debugging-port 9223 \
    --kiosk \
    --fullscreen \
    --hide-scrollbars \
    --reload-unresponsive 60 \
    --serve "$APP_DIR" \
    "${OPTS[@]}" \
    dashboard.html &
PID_UI=$!
PIDS="$PIDS $PID_UI"

# Wait for the exhibit to finish or until the signal trap is triggered
wait $PID_UI
exit $?
